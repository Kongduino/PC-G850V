70 IF A$="" THEN "WAIT"
80 END

1000*PBAR0: REM X/Y POS, W WIDTH
1010 GCURSOR (X,Y):GPRINT "FF"
1020 FOR I=1 TO W-2
1030 GCURSOR (X+I,Y):GPRINT "81"
1040 GCURSOR (X+W-1,Y):GPRINT "FF"
1050 NEXT
1060 RETURN

1070*PBARP: REM X/Y POS, W WIDTH
1080 REM P PERCENTAGE EG 20 --> 20%
1090 R=INT(W/100*P)-1
1100 REM GOSUB "PBAR0"
1110 FOR I=1 TO R
1120 GCURSOR (X+I,Y):GPRINT "FF"
1130 NEXT
1140 C=2
1150 IF P>9 THEN C=C+1
1160 IF P=100 THEN C=C+1
1170 C=C*3
1180 C=(W/2+X-C)/62
1190 LOCATE C,Y/8+1:PRINT " "+STR$(P)+"%"
